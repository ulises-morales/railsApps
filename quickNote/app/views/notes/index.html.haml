.wrapper_with_padding
  #notes.clearfix
    - unless @notes.blank?
      - @notes.each do |note|
        %a{ href: (url_for [note]) }
          .note
            %p.title= note.title
            %p.date= time_ago_in_words(note.created_at)
    - else
      %h2 Add a Note
      %p Looks like you haven't created your first note yet...
      %button= link_to "Create First Note", new_note_path
